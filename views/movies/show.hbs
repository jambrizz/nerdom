<div class="row">
    <div class="col s12 m8">
        <h3>{{movies.title}}
            <small>{{{editIcon movies.user user movies._id false}}}</small>
        </h3>
        <div class="card movies">
            <div class="card-content">
           
                {{{movies.description}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{movies.user.displayName}}</span>
                <img src="{{movies.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/movies/user/{{movies.user._id}}">More From {{movies.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>