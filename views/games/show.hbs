<div class="row">
    <div class="col s12 m8">
        <h3>{{games.title}}
            <small>{{{editIcon games.user user games._id false}}}</small>
        </h3>
        <div class="card games">
            <div class="card-content">
           
                {{{games.description}}}
            </div>
        </div>
    </div>
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title">{{games.user.displayName}}</span>
                <img src="{{games.user.image}}" class="circle responsive-img img-small">
            </div>
            <div class="card-action">
                <a href="/games/user/{{games.user._id}}">More From {{games.user.firstName}}</a>
            </div>
        </div>
    </div>
</div>